{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["ESNext"],
        
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true, 
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}